<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/green_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bungee_shade"
            android:text="CHAPTERS"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Binomial Theorem"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/cn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Complex Numbers"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/cs"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Conic Sections"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/de"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Differential Equations"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/itg"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Introduction To Geometry"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/it"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Integrals"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/ld"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Limits And Derivatives"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/mm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Matrices"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/pm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Permutation And Combination"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/pp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Probability"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/rf"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Relations And Functions"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/ss"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Sequence And Series"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/tf"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Trigonometric Functions"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>
        <Button
            android:id="@+id/iv"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Introduction To Vectors"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange_500"/>

    </LinearLayout>

</ScrollView>